@import 'nib'
@import '../../node_modules/jeet/stylus/jeet'
@import '_mixins.styl'
@import './vendor/flickity.min.css'

$desktop = 1100px
$padding = 10px

$primary ?= white
$secondary ?= #fff

// CSS Reset
global-reset()
//edit()

webfont('GMT', 'GMT', true, 'normal')

boxsizing()

body,html
	height 100%
	overflow hidden
	background-color $primary

body
	font-family 'GMT'
	text-rendering optimizeLegibility
	font-smoothing()
	font-size 21px
	+below($desktop)
		font-size 17px

.container
	height 100%

::selection
	background $secondary
	
::-moz-selection
	background $secondary

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

header.main_menu
	padding $padding
	position fixed
	width 100%
	top 0
	left 0
	mix-blend-mode difference
	color #fff
	z-index 1000
	transition(transform,800ms)
	ul.category
		span(1/2)
		+below($desktop)
			stack()
	ul.albums
		margin-left 1.5em
		
.infos, .back
	position absolute
	bottom $padding
	left $padding

.back
	display none

@import 'home.styl'
@import 'page.styl'