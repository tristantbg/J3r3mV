.intro
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background-color #000000
	cursor pointer
	overflow hidden
	transition(height,1s)
	z-index 6000
	.left, .right
		span(1/2)
		position absolute
		top 0
		height 100vh
		background-size cover
		background-position center
	.left
		left 0
	.right
		right 0
	.invert
		vendor(filter,invert(1))
		opacity 0.5
		z-index 10
	.difference
		z-index 20
	.difference:hover
		mix-blend-mode difference

.intro.closed
	height 0

.slider
	align(vertical)
	width 100%
	height 74%
	transition(all,800ms)
	.flickity-viewport, .flickity-slider
		height 100%
	.gallery_cell
		height 100%
		width 100%
		text-align center
		.content
			width auto
			height 100%
			margin 0
			padding 0
			margin-left -6px
	.hidden
		display none