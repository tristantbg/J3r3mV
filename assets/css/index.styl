.index
	.infos
		display block
	.back
		display none

.intro
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background-color #FFFFFF
	cursor pointer
	overflow hidden
	transition(height,1s)
	z-index 2000
	.left, .right
		span(1/2)
		height 100%
	.left:hover, .right:hover
		vendor(filter,invert(1))

.intro.closed
	height 0
	
.pjax-transition-container
	height 600px
	width 100%
	position absolute
	top 50%
	left 0
	transform(translate3D(0,-50%,0))

.ajax
	position absolute
	width 100%
	height 100%
	text-align center
	opacity 1
	.content
		width auto
		height 100%
		margin 0
		padding 0
		margin-left -6px