.album-navigation
	display none
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 500
	.prev, .next
		span(1/2)
		height 100%
	.prev
		cursor url('../images/prev.png') 22 8, auto
	.next
		cursor url('../images/next.png') 22 8, auto

.album
	.album-navigation
		display block
		+below($desktop)
			display none
	.intro
		display none
	header.main_menu
		transform(translate3D(0,-100%,0))
	.btn_infos
		display none
	.btn_back
		display block

.album.loading
	.album-navigation
		display none

.infos
	.intro
		display none
	#infos, .btn_back
		display block
	.btn_infos
		display none
